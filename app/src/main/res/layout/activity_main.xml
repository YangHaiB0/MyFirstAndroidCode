<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".MainActivity">

    <Button
        android:id="@+id/openFirstBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/btn_open_first" />

    <Button
        android:id="@+id/openRuntimePermissionBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/open_runtime_permission" />

    <Button
        android:id="@+id/openContactBtn"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:text="@string/open_contact" />

</LinearLayout>